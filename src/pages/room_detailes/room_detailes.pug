mixin room_info(image_name, high, description)
    .room_info_item
        img(src=require("./img/" + image_name + ".svg"), alt="", srcset="")
        .room_info_txt
            p.room_info_high=high
            p.room_info_description=description

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        style 
            include ../../../node_modules/air-datepicker/dist/css/datepicker.min.css
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
        script(src='../../../node_modules/air-datepicker/dist/js/datepicker.min.js')
    body 
        include ../../components/headers_footers/authorized_user_header/authorized_user_header
        .room_detailes_images
        .room_detailes_info
            h2 Сведения о номере
            +room_info("comfort", "Комфорт", "Шумопоглощающие стены")
            +room_info("convenience", "Удобство", "Окно в каждой из спален")
            +room_info("cosiness", "Уют", "Номер оснащен камином")
        .room_detailes_impressions
            h2 Впечатления от номера
            .room_detailes_impressions_diagram
                canvas(id="circle")
                    span some text
            .room_detailes_impressions_list 
                ul
                    each item, number in {1: "Великолепно", 2: "Хорошо", 3: "Удовлетворительно", 4: "Разочарован"}
                        li(class="li_item"+number)= item
        .room_detailes_comments
        .room_detailes_card 
            include ../../components/cards/checkout/checkout_card

            

        
            
            

